/* pages/list/list.wxss */
.nearCard-fl {
  width: 40%;
  float: left;
}

.nearCard-fl image {
  width: 200rpx;
  height: 200rpx;
  padding: 8% 15%;
}

.nearCard-fr {
  font-size: 27rpx;
  line-height: 50rpx;
  width: 60%;
  margin-left: 40%;
  margin-top: 15rpx;
  color: #999;
}

.nearCard-fr text {
  font-size: 22rpx;
}

.down {
  background-color: #efefef;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20rpx;
}

.down view {
  font-size: 26rpx;
  color: #999;
  line-height: 50rpx;
}

.feedBack {
  text-align: center;
  background-color: #eecfbd;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10rpx;
  padding: 5rpx 0;
  margin: 10rpx 0 0 0;
}

.hidden {
  display: none;
}

.addbtn{
	position: fixed;
	width: 160rpx;
	height: 136rpx; 
	text-align: center;
	bottom:80rpx;
	right:80rpx;
	color:#1180ff; 
}
.addbtn navigator{ 
  width: 96rpx;
	height: 96rpx; 
	border-radius: 50%;
  display: block;
  margin:0 auto;
}
.addbtn i{
	font-size:96rpx;  
} 